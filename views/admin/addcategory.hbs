   <h1 class="h3 mb-4 text-gray-800">Add New Category</h1>

   <form class="form-horizontal" action="/admin/addcategory" method="POST" >
  <div class="form-group">
    <label class="control-label col-sm-2" for="text">Pet Category:</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="text" name="name" placeholder="Enter Category Name">
    </div>
  </div>


 
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit"  class="btn btn-dark">Add Category</button>
    </div>
  </div>
</form>


