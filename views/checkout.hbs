{{>bread}}



<section class="h-100 h-custom" style="background-color: #eee;">
  <div class="container h-100 py-5">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col">
        <div class="card shopping-cart" style="border-radius: 15px;">
          <div class="card-body text-black">

            <div class="row">
                 <div class="col-lg-6 px-5 py-4"></div>

                  <div class="col-lg-6 px-5 py-4">

                <h3 class="mb-5 pt-2 text-center fw-bold text-uppercase"> Make Payment of &#8377;{{total}}</h3>
                      <div id="charge-error" class="alert alert-danger {{#if noError}}hidden{{/if}}">
            {{errMsg}}
        </div>
                <form action="/checkout" method="POST" class="mb-5" id="checkout-form">

                 <div class="form-outline mb-5">
                     <label class="form-label" for="typeName"> Name</label>
                    <input type="text" name="name" class="form-control form-control-lg" siez="17"
                      />
           
                  </div>
                  <div class="form-outline mb-5">
                     <label class="form-label" for="typeName">Address</label>
                    <input type="text" name="name" class="form-control form-control-lg" siez="17"
                      />
           
                  </div>



                  <div class="form-outline mb-5">
                       <label class="form-label" for="typeText">Card Number</label>
                    <input type="text" id="card-number" class="form-control form-control-lg" siez="17"
                       minlength="16" maxlength="16" />
                 
                  </div>

                  <div class="form-outline mb-5">
                     <label class="form-label" for="typeName">Card Holder Name</label>
                    <input type="text" id="card-name" class="form-control form-control-lg" siez="17"
                      />
           
                  </div>
                 

                  <div class="row">
                    <div class="col-md-4 mb-5">
                      <div class="form-outline">
                              <label class="form-label" for="typeExp">Expiration Month</label>
                        <input type="text" id="card-expiry-month" class="form-control form-control-lg" 
                          size="2"  minlength="2" maxlength="2" />
                 
                      </div>
                    </div>
                    <div class="col-md-4 mb-5">
                      <div class="form-outline">
                               <label class="form-label" for="typeText">Expiration Year</label>
                        <input type="text" id="card-expiry-year" class="form-control form-control-lg"
                          size="1" />
                 
                      </div>
                    </div>
                    <div class="col-md-4 mb-5">
                      <div class="form-outline">
                              <label class="form-label" for="typeExp">CVC</label>
                      <input type="password" id="card-cvc" class="form-control form-control-lg" maxlength="3"
                       />
                 
                      </div>
                    </div>
                  </div>


                   <button type="submit" class="btn btn-success">Checkout</button>

              
                  <h5 class="fw-bold mb-5" style="position: absolute; bottom: 0;">
                    <a href="/"><i class="fas fa-angle-left me-2"></i>Back to shopping</a>
                  </h5>

                </form>

              </div>







            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
</section>


